{
	"name": "webext-additional-permissions",
	"version": "1.0.0",
	"description": "WebExtensions module: Get any optional permissions that users have granted you.",
	"keywords": [
		"permissions",
		"optional_permissions",
		"manifest",
		"granted",
		"request",
		"requested",
		"added",
		"extra",
		"chrome",
		"firefox",
		"browser",
		"extension"
	],
	"repository": "fregante/webext-additional-permissions",
	"license": "MIT",
	"author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "xo && tsc --noEmit",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "off"
		}
	},
	"dependencies": {
		"@types/chrome": "0.0.106"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint-config-xo-typescript": "^0.28.0",
		"typescript": "^3.8.3",
		"xo": "*"
	}
}
